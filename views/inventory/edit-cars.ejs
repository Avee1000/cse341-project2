<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>


<div class="inventory-container">

    <h1>Edit Inventory</h1>
    <div class="notice">
\    </div>

    <form action="/api/cars/update" method="post" id="updateForm">
        <input type="hidden" name="_id" <% if(_id) { %> value="<%= _id %>" <% } %>>

        <label for="make">Inventory Make</label>
        <input type="text" id="make" name="make" required pattern="^[A-Za-z0-9]+$"
            title="No spaces or special characters" value="<%= make %>">

        <label for="model">Inventory Model</label>
        <input type="text" id="model" name="model" required pattern="^[A-Za-z0-9]+$"
            title="No spaces or special characters" value="<%= model %>">

        <label for="year">Inventory Year</label>
        <input type="number" id="year" name="year" required min="1800" max="2100"
            value="<%= year %>">

        <label for="price">Inventory Price</label>
        <input type="number" id="price" name="price" required value="<%= price %>">

        <label for="miles">Inventory Miles</label>
        <input type="number" id="miles" name="miles" required value="<%= miles %>">

        <label for="color">Inventory Color</label>
        <input type="text" id="color" name="color" required value="<%= color %>">

        <label for="description">Inventory Description</label>
        <textarea id="description" name="description" required rows="4" pattern="^[A-Za-z0-9\s,.'-]+$"
            title="No special characters except , . ' -"><%= locals.description %></textarea>

        <label for="image">Inventory Image Path</label>
        <input type="text" id="image" name="image" required pattern="^[A-Za-z0-9/._-]+$"
            title="No spaces or special characters except / . _ -" value="<%= image %>">

        <label for="thumbnail">Inventory Image Thumbnail</label>
        <input type="text" id="thumbnail" name="thumbnail" required pattern="^[A-Za-z0-9/._-]+$"
            title="No spaces or special characters except / . _ -" value="<%= thumbnail %>">


        <button type="submit" disabled>Update Vehicle</button>
    </form>
</div>

<script src="/js/inv-update.js"></script>